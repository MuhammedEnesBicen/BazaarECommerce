    <style>
        /* The container <div> - needed to position the sinlge-bar content */
        .sinlge-bar {
            position: relative;
            display: inline-block;
        }

        /* sinlge-bar Content (Hidden by Default) */
        .sinlge-bar-content {
            display: none;
            position: absolute;
            left: -80px;
            background-color: #f1f1f1;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
            z-index: 1;
        }

            /* Links inside the sinlge-bar */
            .sinlge-bar-content a {
                color: black;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
            }

                /* Change color of sinlge-bar links on hover */
                .sinlge-bar-content a:hover {
                    background-color: #ddd;
                }

        /* Show the sinlge-bar menu on hover */
        .sinlge-bar:hover .sinlge-bar-content {
            display: block;
        }

        /* Change the background color of the sinlge-bar button when the sinlge-bar content is shown */

    </style>
</head>
<body>

    <!-- Header -->
    <header class="header shop">

        <div class="middle-inner">
            <div class="container">
                <div class="row">
                    <div class="col-lg-2 col-md-2 col-12">
                        <!-- Logo -->
                        <div class="logo">
                            <a href="/Home/Index"><img src="~/EshopFree/images/ebazaar.png" alt="logo"></a>
                        </div>
                        <!--/ End Logo -->
                        <!-- Search Form -->
                        <div class="search-top">
                            <div class="top-search"><a href="#0"><i class="ti-search"></i></a></div>
                            <!-- Search Form -->
                            <div class="search-top">
                                @*<form class="search-form">
                                    <input type="text" placeholder="Search here..." name="search">
                                    <button value="search" type="submit"><i class="ti-search"></i></button>
                                </form>*@
                            </div>
                            <!--/ End Search Form -->
                        </div>
                        <!--/ End Search Form -->
                        <div class="mobile-nav"></div>
                    </div>
                    <div class="col-lg-8 col-md-7 col-12">
                        <div class="search-bar-top">
                            <div class="search-bar" onclick="showSearchMessage()">

                                <form>
                                    <input name="search" placeholder="Search Products Here....." type="search" disabled>
                                    <button  class="btnn" disabled><i class="ti-search"  ></i></button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-3 col-12">
                        <div class="right-bar">
                            <!-- Search Form -->
                            @*<div class="sinlge-bar">
                                    <a href="#" class="single-icon"><i class="far fa-heart"></i></a>
                                </div>*@
                            <div class="sinlge-bar">
                                <a href="/Home/RouteLoginOrProfile/" class="single-icon dropbtn"><i class="fa fa-user-circle"></i></a>
                                <a id="LoginLink" href="/Home/RouteLoginOrProfile/"class="flex-column">Login</a>
                                <div class="sinlge-bar-content" id="sinlge-bar-content">
                                    <a href="/Profile/Index/">Profile</a>
                                    <a href="/Home/LogOut/">Log Out</a>
                                </div>
                            </div>
                            <div class="sinlge-bar shopping">
                                <a href="#" class="single-icon "><i class="ti-bag"></i> <span class="total-count">2</span></a>

                                <!-- Shopping Item -->
                                <div id="cartPopUp" class="shopping-item">

                                </div>
                                <!--/ End Shopping Item -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Header Inner -->
        <div class="header-inner">
            <div class="container">
                <div class="cat-nav-head">
                    <div class="row">
                        <div class="col-lg-12 col-12">
                            <div class="menu-area">
                                <!-- Main Menu -->
                                <nav class="navbar navbar-expand-lg">
                                    <div class="navbar-collapse">
                                        <div>
                                            <div class="nav-inner">
                                                @*for centering <div class="d-flex justify-content-center">...</div> and col lg to 12*@
