    <script>
        $.post('/Home/IsAuthorize/').then(function (result) {
            if (result == false) {
                $('#sinlge-bar-content').html('');
                $('#cartPopUp').html('<p>You didn\'t logged in yet. Go </p> <a href = "/Login/Index/" > Log in</a >')

            } else {
                $('#LoginLink').html('')
                $.get('/Home/GetCartPreviewPopup').then(function (result) {
                    $('#cartPopUp').html(result);
                });
            }
        });

        function showSearchMessage() {
            alert("its not functional");
