@model List<EntityLayer.Concrete.Product>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<style>
    .hs {
        padding-left: 0px;
        margin-left: 0px;
    }

    .textArea:hover {
        border: 2px solid green;
    }
</style>

@{
    List<EntityLayer.Concrete.Product> temp = Model;

    Dictionary<int, string> tempBrands = new Dictionary<int, string>();

    foreach (var item in temp)
    {
        if (!tempBrands.ContainsKey(item.BrandId))
        {
            tempBrands.Add(item.BrandId, item.Brand.BrandName.ToString());
        }
    }

    var brands = tempBrands.ToList();

    var filterModel = ViewData["filterModel"];

}
<script src="~/lib/jquery/dist/jquery.js"></script>


<link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />


<div class="container">

    <input class="input-group textArea" type="text" name="name" value="" placeholder="Search by word..." />
    <div class="dropdown-divider"></div>

    <h5>Brands</h5>
    @foreach (var item in brands)
        {

    <div class="form-check" onclick="brandFilter(@ViewBag.category,@item.Key)">
        <input class="form-check-input" type="checkbox" value="" id=@item.Key.ToString() +"flexCheckDefault">
        <label class="form-check-label p-0" for=@item.Key.ToString() +"flexCheckDefault">
            @item.Value
        </label>
    </div>
        }

    <div class="dropdown-divider"></div>
    <h6 class="hs">Price Range</h6>
    <div class="row col-12 ">
        <input class="form-control col-5 " type="text" placeholder="Min" aria-label="default input example">
        <input class="form-control col-5" type="text" placeholder="Max" aria-label="default input example">
        <button class="form-control col-2 text-center" kind="primary" disabled=""><i class="fas fa-check"></i></button>

    </div>


    <div class="dropdown-divider"></div>
    @* Star rate division *@
    <h6 class="hs">Star Rate</h6>
    <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="4plusstar">
        <label class="form-check-label p-0" for="4plusstar">
            <i onclick="" class="fas fa-star" style="color:#fdb03d"></i>  4 - 5 point
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="3plusstar">
        <label class="form-check-label p-0" for="3plusstar">
            <i class="fas fa-star" style="color: #fdb03d " href="filter"></i>  3 - 3.9 point
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="2plusstar">
        <label class="form-check-label p-0" for="2plusstar">
            <i class="fas fa-star" style="color: #fdb03d"></i>  2 - 2.9 point
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="0plusstar">
        <label class="form-check-label p-0" for="0plusstar">
            <i class="fas fa-star" style="color: #fdb03d"></i>  0 - 1.9 point
        </label>
    </div>


</div>

